{
  "fileExtensions": [
    ".less",
    ".css"
  ],
  "excludedFiles": [
    "fonts.less"
  ],
  "attributeQuotes": {
    "enabled": true,
    "severity": "error"
  },
  "borderZero": {
    "enabled": true,
    "severity": "error",
    "style": "zero"
  },
  "comment": {
    "enabled": false,
    "severity": "error"
  },
  "decimalZero": {
    "enabled": true,
    "severity": "error",
    "style": "leading"
  },
  "depthLevel": {
    "enabled": false,
    "severity": "error",
    "depth": 3
  },
  "duplicateProperty": {
    "enabled": true,
    "severity": "error",
    "exclude": []
  },
  "emptyRule": {
    "enabled": true,
    "severity": "error"
  },
  "finalNewline": {
    "enabled": true,
    "severity": "error"
  },
  "hexLength": {
    "enabled": true,
    "severity": "error",
    "style": "long"
  },
  "hexNotation": {
    "enabled": true,
    "severity": "error",
    "style": "uppercase"
  },
  "hexValidation": {
    "enabled": true,
    "severity": "error"
  },
  "idSelector": {
    "enabled": true,
    "severity": "error",
    "exclude": []
  },
  "importantRule": {
    "enabled": true,
    "severity": "error"
  },
  "importPath": {
    "enabled": true,
    "severity": "error",
    "filenameExtension": true,
    "leadingUnderscore": false,
    "exclude": []
  },
  "maxCharPerLine": {
    "enabled": true,
    "severity": "error",
    "limit": 120
  },
  "newlineAfterBlock": {
    "enabled": true,
    "severity": "error"
  },
  "propertyOrdering": {
    "enabled": false,
    "severity": "error",
    "style": "alpha"
  },
  "propertyUnits": {
    "enabled": false,
    "severity": "error",
    "valid": ["px"],
    "invalid": ["pt"],
    "properties": {
      "line-height": []
    }
  },
  "qualifyingElement": {
    "enabled": false,
    "severity": "error",
    "allowWithAttribute": false,
    "allowWithClass": false,
    "allowWithId": false
  },
  "selectorNaming": {
    "enabled": true,
    "severity": "error",
    "disallowUppercase": true,
    "disallowUnderscore": true,
    "disallowDash": false,
    "exclude": []
  },
  "singleLinePerProperty": {
    "enabled": true,
    "severity": "error",
    "allowSingleLineRules": false
  },
  "singleLinePerSelector": {
    "enabled": true,
    "severity": "error",
    "style": "none"
  },
  "spaceAfterPropertyColon": {
    "enabled": true,
    "severity": "error",
    "style": "one_space"
  },
  "spaceAfterPropertyName": {
    "enabled": true,
    "severity": "error",
    "style": "no_space"
  },
  "spaceAfterPropertyValue": {
    "enabled": true,
    "severity": "error",
    "style": "no_space"
  },
  "spaceAroundComma": {
    "enabled": true,
    "severity": "error",
    "allowNewline": false,
    "style": "after"
  },
  "spaceAroundOperator": {
    "enabled": true,
    "severity": "error",
    "style": "both"
  },
  "spaceBeforeBrace": {
    "enabled": true,
    "severity": "error",
    "style": "one_space"
  },
  "spaceBetweenParens": {
    "enabled": true,
    "severity": "error",
    "style": "no_space"
  },
  "stringQuotes": {
    "enabled": true,
    "severity": "error",
    "style": "single"
  },
  "trailingSemicolon": {
    "enabled": true,
    "severity": "error"
  },
  "trailingWhitespace": {
    "enabled": true,
    "severity": "error"
  },
  "universalSelector": {
    "enabled": true,
    "severity": "error"
  },
  "urlFormat": {
    "enabled": false,
    "severity": "error",
    "style": "relative"
  },
  "urlQuotes": {
    "enabled": true,
    "severity": "error"
  },
  "variableValue": {
    "enabled": true,
    "severity": "error",
    "always": [
      "color",
      "background",
      "backgorund-color",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-color",
      "box-shadow",
      "fill",
      "stroke",
      "filter",
      "font-weight"
    ]
  },
  "zeroUnit": {
    "enabled": true,
    "severity": "error",
    "style": "no_unit"
  }
}
