{
  "name": "roe",
  "version": "0.0.0",
  "description": "DabApps' PDK - A Collection of React Components for Project Development",
  "main": "src/ts/index.ts",
  "scripts": {
    "build-dirs": "mkdir -p dist/js/ && mkdir -p dist/css/",
    "build-js": "browserify -d src/ts/index.ts -p [tsify] | exorcist dist/js/index.js.map > dist/js/index.js ",
    "build-less": "lessc src/less/index.less dist/css/index.css --silent --compress && postcss --use autoprefixer -r dist/css/index.css",
    "build": "npm run build-dirs && npm run build-less && npm run build-js",
    "watch-js": "watchify src/ts/index.ts -p [tsify] -o dist/js/index.js -v",
    "watch-less": "watch-less-do-more -u autoprefixer -i src/less/index.less -o dist/css/index.css",
    "watch": "npm run build-dirs && npm run watch-less && npm run watch-js",
    "tests": "jest",
    "lint-js": "tslint 'src/ts/'",
    "test": "npm run lint-js && npm run tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dabapps/roe.git"
  },
  "keywords": [
    "pdk",
    "project",
    "development",
    "kit",
    "react",
    "components"
  ],
  "author": "DabApps",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dabapps/roe/issues"
  },
  "homepage": "https://github.com/dabapps/roe#readme",
  "dependencies": {
    "@types/react": "15.0.22",
    "@types/react-dom": "15.5.0",
    "autoprefixer": "6.7.7",
    "browserify": "14.3.0",
    "exorcist": "0.4.0",
    "less": "2.7.2",
    "normalize.css": "6.0.0",
    "postcss": "5.2.17",
    "postcss-cli": "3.2.0",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "tsify": "3.0.1",
    "typescript": "2.2.2"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "@types/react-test-renderer": "15.4.5",
    "jest": "19.0.2",
    "react-test-renderer": "15.5.4",
    "ts-jest": "19.0.10",
    "tslint": "5.1.0",
    "tslint-config-dabapps": "github:dabapps/tslint-config-dabapps#v0.1.0",
    "watch-less-do-more": "0.2.0",
    "watchify": "3.9.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverage": true
  }
}
