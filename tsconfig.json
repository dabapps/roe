{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types/", "./@types/"],
    "baseUrl": "./src/ts/"
  },
  "include": ["./src/ts/", "./tests/", "./@types/", "./examples/"]
}
