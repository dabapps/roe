mkdir -p docs/build/js/
mkdir -p docs/build/css/

concurrently \
  --prefix='name' \
  --names='watch-less,watch-js,live-reload,http-server' \
  --prefix-colors='cyan,red,magenta,green' \
  'watch-less-do-more -u autoprefixer -i docs/src/less/index.less -o docs/build/css/index.css' \
  'watchify -d docs/src/ts/index.tsx -p [tsify] -o docs/build/js/index.js -v' \
  'livereload docs/build/css/' \
  'http-server -c-0 docs/ -o'
